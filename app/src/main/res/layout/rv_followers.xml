<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_followers"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@android:color/holo_purple" />

    <TextView
        android:id="@+id/txt_username_followers"
        style="@style/StyleUsername"
        android:text="@string/username"
        app:layout_constraintBottom_toBottomOf="@+id/img_followers"
        app:layout_constraintStart_toEndOf="@+id/img_followers"
        app:layout_constraintTop_toTopOf="@+id/img_followers"
        app:layout_constraintVertical_bias="0.333" />

    <TextView
        android:id="@+id/txt_type_followers"
        style="@style/StyleDesc"
        android:text="@string/type"
        app:layout_constraintStart_toEndOf="@+id/img_followers"
        app:layout_constraintTop_toBottomOf="@+id/txt_username_followers" />

</androidx.constraintlayout.widget.ConstraintLayout>